<%- include ../layouts/cabecera.ejs %> 
        <br>
        <a href="/entregas/crear" class="btn btn-primary" type="button" style="border: 1px solid #000; width: 100px;">Crear</a>
        <br>
        <br>
        <table class="table table-light" style="border: 2px solid #000">
            <thead class="thead-light" style="text-align: center; font-size: 20px; backgrounds: grey; ">
                <tr style="background: grey;">
                    <th style="border: 1px solid #000">ID</th>
                    <th style="border: 1px solid #000">Titulo</th>
                    <th style="border: 1px solid #000">Descripcion</th>                    
                    <th style="border: 1px solid #000">Imagen</th>
                    <th style="border: 1px solid #000"></th>
                </tr>
            </thead>
            <tbody>
                <% for( let entrega = 0; entrega < entregas.length; entrega++ ) { %>
                    <tr style="text-align: center;">
                        <td style="border: 1px solid #000"> <%=entregas[entrega].id %></td>
                        <td style="border: 1px solid #000"> <%=entregas[entrega].titulo  %></td>
                        <td style="border: 1px solid #000"><%=entregas[entrega].descripcion%></td>
                        <td style="border: 1px solid #000">
                            <img class="img-thumbnail" src="images/<%=entregas[entrega].foto%>" width="100">                            
                        </td>
                        <td style="padding: 50px 0;"> 
                            
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                
                                <form class="form-inline" method="get" action="/entregas/editar/<%=entregas[entrega].id %>">
                                    <button class="btn btn-warning" type="submit" style="border: 1px solid #000">Editar</button>
                                </form>

                            </div>
                            
                            | 
                            
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                
                                <form class="form-inline" method="post" action="/entregas/eliminar/<%=entregas[entrega].id %>">
                                    <button class="btn btn-danger" type="submit" style="border: 1px solid #000">Borrar</button>
                                </form>

                            </div>
                        
                        
                        </td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
<%- include ../layouts/pie.ejs %> 
